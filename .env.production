# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=${SECRET_KEY}

# Server Configuration
HOST=0.0.0.0  
PORT=8000

# Domain Configuration (replace with your actual domains)
FRONTEND_URL=https://mattailor.com
BACKEND_URL=https://api.mattailor.com

# Frontend Configuration
VITE_API_URL=https://api.mattailor.com
VITE_ENVIRONMENT=production

# Database Configuration
DATABASE_URL=${DATABASE_URL}
REDIS_URL=${REDIS_URL}

# PostgreSQL specific settings for production
POSTGRES_DB=${POSTGRES_DB:-mattailor}
POSTGRES_USER=${POSTGRES_USER:-postgres}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
REDIS_PASSWORD=${REDIS_PASSWORD:-}

# CORS Configuration (restrict to production domains)
CORS_ORIGINS=${CORS_ORIGINS:-["https://mattailor.com","https://www.mattailor.com"]}

# API Keys (use production keys)
OPENAI_API_KEY=${OPENAI_API_KEY}
HUGGINGFACE_API_KEY=${HUGGINGFACE_API_KEY}
MATWEB_API_KEY=${MATWEB_API_KEY}
MATERIALS_PROJECT_API_KEY=${MATERIALS_PROJECT_API_KEY}

# Performance Settings
WORKER_THREADS=4
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=60

# Feature Flags
ENABLE_ML_PREDICTION=true
ENABLE_RL_PLANNING=true
ENABLE_NLP_PROCESSING=true
ENABLE_CACHING=true

# Logging
LOG_LEVEL=INFO

# Security
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Monitoring
GRAFANA_PASSWORD=${GRAFANA_PASSWORD:-admin}