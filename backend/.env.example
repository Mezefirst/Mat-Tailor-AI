# Environment Configuration Template for MatTailor AI Backend

# Application Environment
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=your-strong-secret-key-change-this-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Domain Configuration
FRONTEND_URL=https://your-frontend-domain.com
BACKEND_URL=https://your-backend-domain.com

# CORS Configuration (JSON array or comma-separated)
CORS_ORIGINS=["https://your-frontend-domain.com","https://your-other-domain.com"]

# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/mattailor
REDIS_URL=redis://host:6379/0

# Third-Party API Keys
MATWEB_API_KEY=your-matweb-api-key
MATERIALS_PROJECT_API_KEY=your-materials-project-api-key
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# External Service URLs
MATERIAL_DB_API_URL=https://api.materialsproject.org
SUPPLIER_API_URL=https://api.supplier-service.com

# Performance Settings
WORKER_THREADS=4
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=60

# Feature Flags
ENABLE_ML_PREDICTION=True
ENABLE_RL_PLANNING=True
ENABLE_NLP_PROCESSING=True
ENABLE_CACHING=True

# Logging
LOG_LEVEL=INFO

# Security
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Model Cache
MODEL_CACHE_DIR=./models